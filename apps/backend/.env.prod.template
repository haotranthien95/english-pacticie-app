# Production Environment Configuration Template
# Copy this file to .env.prod and fill in the required values

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_DB=english_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>

# ============================================
# MINIO OBJECT STORAGE
# ============================================
MINIO_ROOT_USER=<CHANGE_ME_MINIO_USER>
MINIO_ROOT_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>
MINIO_BUCKET_NAME=english-app-audio

# ============================================
# AZURE SPEECH SERVICES
# ============================================
AZURE_SPEECH_KEY=<YOUR_AZURE_SPEECH_KEY>
AZURE_SPEECH_REGION=<YOUR_AZURE_REGION>

# ============================================
# JWT SECRETS
# ============================================
JWT_SECRET_KEY=<GENERATE_WITH: openssl rand -hex 32>

# ============================================
# OAUTH PROVIDERS (Optional)
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# ============================================
# APPLICATION CONFIGURATION
# ============================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
BACKEND_PORT=8000

# ============================================
# MONITORING
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>
